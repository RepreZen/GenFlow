            <dependency>
                <groupId>com.reprezen.genflow</groupId>
                <artifactId>standard-gentemplates</artifactId>
                <version>0.0.3-SNAPSHOT</version>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>io.swagger</groupId>
                <artifactId>swagger-codegen</artifactId>
